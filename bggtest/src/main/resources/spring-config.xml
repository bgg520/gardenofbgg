<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:aop="http://www.springframework.org/aop"
		xmlns:p="http://www.springframework.org/schema/p"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
							http://www.springframework.org/schema/context
							http://www.springframework.org/schema//context/spring-context-4.0.xsd
							http://www.springframework.org/schema/aop
							http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

	<!-- 注解及扫描 -->
	<!-- <context:annotation-config/> -->
	<context:component-scan base-package="com.bgg"/>
	
	<!-- quartz -->
	<bean id="hellojob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="com.bgg.timer.HelloTimer" />
		<!-- <property name="jobDataMap">
			<map>
				<entry key="anotherBean" value-ref="anotherBean"></entry>
			</map>
		</property> -->
		<property name="durability" value="true" />
	</bean>
	
	<!-- quartz trigger -->
	<bean id="CronTriggerBean" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="hellojob" />
		<property name="cronExpression" value="0/5 * * * * ？" />
	</bean>
	
	<!-- quartz scheduler factory -->
	<bean id="SpringJobSchedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="hellojob"/>
			</list>
		</property>
		<property name="triggers">
			<list>
				<ref bean="CronTriggerBean"/>
			</list>
		</property>
	</bean>
	
</beans>